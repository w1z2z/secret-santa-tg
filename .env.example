# Telegram Bot Token (обязательно)
TG_TOKEN=your_telegram_bot_token_here

# MongoDB Configuration
# Для работы через Docker можно не указывать MONGO_URI, 
# будет использован MONGO_HOST=db (имя сервиса в docker-compose)
MONGO_URI=

# MongoDB Host
# В Docker используется имя сервиса 'db'
# Для локальной разработки используйте 'localhost'
MONGO_HOST=db

# MongoDB Port
MONGO_PORT=27017

# MongoDB Username
MONGO_USERNAME=admin

# MongoDB Password (обязательно для безопасности)
MONGO_PASSWORD=your_secure_password_here

# MongoDB Database Name
MONGO_DATABASE=secret-santa